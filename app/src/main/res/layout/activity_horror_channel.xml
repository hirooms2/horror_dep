<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/horror_channel_back"
    tools:context="com.horrornumber1.horrordepartment.Activities.HorrorChannel">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/announceBtn"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_alignLeft="@+id/horrorRadioBtn"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/horrorRadioBtn"
                android:layout_marginTop="15dp"
                android:src="@drawable/announce_btn" />

            <ImageView
                android:id="@+id/horrorRadioBtn"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginLeft="66dp"
                android:layout_marginStart="66dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/horror_radio_btn"
                android:layout_below="@+id/announceBtn"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:id="@+id/horrorGameBtn"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:src="@drawable/horror_game_btn"
                android:layout_marginTop="37dp"
                android:layout_alignTop="@+id/announceBtn"
                android:layout_alignLeft="@+id/horrorSpotBtn"
                android:layout_alignStart="@+id/horrorSpotBtn" />

            <ImageView
                android:id="@+id/horrorSpotBtn"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/horror_spot_btn"
                android:layout_below="@+id/horrorGameBtn"
                android:layout_toRightOf="@+id/horrorRadioBtn"
                android:layout_toEndOf="@+id/horrorRadioBtn" />
        </RelativeLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/notifyFrame"
        android:background="#AA000000"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/announcement"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="match_parent"/>

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/kakaoFriend"
                            android:layout_weight="1"
                            android:src="@drawable/kakao_plusfriend"/>

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="match_parent"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="match_parent"/>

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/facebookimg"
                            android:src="@drawable/facebook_logo"/>

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="match_parent"/>

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/notifyCloseBtn"
                android:background="#00000000"
                android:layout_weight="0"
                android:layout_gravity="end"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:text="창닫기"
                android:textSize="16sp"
                android:textColor="@android:color/holo_red_light"/>
        </LinearLayout>

    </FrameLayout>


</FrameLayout>
