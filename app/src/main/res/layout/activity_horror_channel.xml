<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/horror_channel_back"
    tools:context="com.horrornumber1.horrordepartment.Activities.HorrorChannel">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/announceBtn"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_alignLeft="@+id/horrorRadioBtn"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/horrorRadioBtn"
            android:layout_marginTop="15dp"
            android:src="@drawable/announce_btn" />

        <ImageView
            android:id="@+id/horrorRadioBtn"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginLeft="66dp"
            android:layout_marginStart="66dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/horror_radio_btn"
            android:layout_below="@+id/announceBtn"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/horrorGameBtn"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@drawable/horror_game_btn"
            android:layout_marginTop="37dp"
            android:layout_alignTop="@+id/announceBtn"
            android:layout_alignLeft="@+id/horrorSpotBtn"
            android:layout_alignStart="@+id/horrorSpotBtn" />

        <ImageView
            android:id="@+id/horrorSpotBtn"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/horror_spot_btn"
            android:layout_below="@+id/horrorGameBtn"
            android:layout_toRightOf="@+id/horrorRadioBtn"
            android:layout_toEndOf="@+id/horrorRadioBtn" />
    </RelativeLayout>

</FrameLayout>
