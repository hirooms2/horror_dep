<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/home"
    android:background="@drawable/back02">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/notification"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:alpha="0.8" />

            <ImageView
                android:id="@+id/sound"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginRight="10dp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/majorImg"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_alignLeft="@+id/email"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/email"
                android:layout_marginTop="133dp"
                android:src="@drawable/majorword2" />

            <ImageView
                android:id="@+id/horrorChannel"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_below="@+id/majorImg"
                android:layout_centerHorizontal="true"
                android:src="@drawable/horrorchannel" />

            <ImageView
                android:id="@+id/councilImg"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/horrorChannel"
                android:src="@drawable/councilword2" />

            <ImageView
                android:id="@+id/email"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_alignEnd="@+id/councilImg"
                android:layout_alignRight="@+id/councilImg"
                android:layout_below="@+id/councilImg"
                android:layout_marginEnd="56dp"
                android:layout_marginRight="56dp"
                android:src="@drawable/email" />

            <TextView
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="35dp"
                android:text="개인정보 보호방침"
                android:textColor="@color/colorBackBackWhite" />
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>