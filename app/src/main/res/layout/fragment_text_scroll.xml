<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">

    <com.horrornumber1.horrordepartment.Widget.ScrollViewExt
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/content_scroll">

        <LinearLayout
            android:id="@+id/content_scroll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="60dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/content_logo"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="160dp"
                android:layout_marginBottom="60dp" />
            <TextView
                android:id="@+id/content_scroll_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="28dp"
                android:textColor="#f00"
                android:textStyle="bold"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_gravity="right">
                <TextView
                    android:id="@+id/content_writer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:textSize="14dp"
                    android:textColor="@color/colorGray" />
                <TextView
                    android:id="@+id/content_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="@color/colorGray"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:background="#00000000"
                android:textColor="@android:color/white"
                android:layout_marginTop="60dp"
                android:lineSpacingExtra="5dp"
                android:id="@+id/content_scroll_text"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:orientation="vertical">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center"
                    android:id="@+id/content_scroll_answerBtn"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/content_scroll_answerText"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:background="#00000000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"></LinearLayout>
        </LinearLayout>
    </com.horrornumber1.horrordepartment.Widget.ScrollViewExt>


    <LinearLayout
        android:id="@+id/content_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#dd000000"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="65dp"
                android:layout_height="55dp"
                android:src="@drawable/left_arrow"
                android:background="#00000000"
                android:id="@+id/prevBtn"
                />
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/favorite"
                android:layout_centerVertical="true"
                android:id="@+id/favorite"
                android:layout_centerInParent="true"
                android:layout_marginRight="30dp"
                />
            <ImageView
                android:layout_width="65dp"
                android:layout_height="55dp"
                android:id="@+id/nextBtn"
                android:src="@drawable/right_arrow"
                android:background="#00000000"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>